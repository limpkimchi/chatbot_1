package com.suffering;

import java.awt.*;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner scan = new Scanner(System.in);

        System.out.println("I am a chatbot. Please enter your name: ");

        String name = scan.nextLine();

         while (name.length() > 4) {
             System.out.println("Hello nave. Please state your age:");

             int age = scan.nextInt();

                 if (age > 30) {
                     System.out.println("Damn. On a scale of 1-10, how rusty are your joints? \n10 being tetanus.");

                     int scale = scan.nextInt();
                     if (scale < 7) {
                         System.out.println("We all know that's a lie. Can't be less than a 7. Try again.");
                         scale = scan.nextInt();
                         {
                             while (scale < 7) {
                                 System.out.println("Try again you limp noodle.");
                                 scale = scan.nextInt();
                             }
                         }
                     }
                     if (scale >= 7) {
                         System.out.println("Sounds about right.");
                         break;
                     }
                 // }while (age < 30) {
                 // System.out.println("Kimbo-slice. Did you find a job yet?");
                 //String confirmJob = scan.nextLine();
                 //if (confirmJob.length() < 3) {
                     //System.out.println("Why you no doctor yet");
                 //} else {
                     //System.out.println("Sounds fake but ok.");
                 }

        }if (name.length() == 4) {
            System.out.println("Hello Kyle. Teaching Java to a beginner must be a pain. " +
                    "How many weeks do you think it'll take until Kelly gets it? Anywhere between 1-30.");
            int weeks = scan.nextInt();
            System.out.println(weeks + " weeks eh? For general incompetence I'll add another month. So let's say " +
                    (weeks + 4) + " weeks total.");
        }
    }
}
